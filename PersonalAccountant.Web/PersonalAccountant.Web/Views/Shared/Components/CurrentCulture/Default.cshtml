@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model PersonalAccountant.Web.Components.ViewModels.CurrentCultureViewModel

@inject IViewLocalizer Localizer

<label>@Localizer["Select language"]</label>

@foreach (var culture in Model.AvailableCultures)
{
	<form asp-controller="Culture"
	      asp-action="SetCulture"
	      asp-route-returnUrl="@Model.ReturnUrl"
	      method="post"
	      class="d-inline-block">
		<button class="btn p-1">
			<img src="@culture.ImagePath" class="rounded flag-icon border"/>
		</button>
		<input type="hidden" name="culture" value="@culture.CultureCode"/>
	</form>
}
